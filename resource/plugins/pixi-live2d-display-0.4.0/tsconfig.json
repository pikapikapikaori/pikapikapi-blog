{
  "compilerOptions": {
    "experimentalDecorators": true,
    "declaration": true,
    "incremental": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUncheckedIndexedAccess": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@cubism/*": ["cubism/src/*"]
    },
    "types": [
      "node",
      "offscreencanvas"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [
    "src/**/*",
    "cubism/**/*",
    "core/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "build*",
    "./types"
  ]
}
